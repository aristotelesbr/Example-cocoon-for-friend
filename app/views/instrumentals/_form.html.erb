<%= simple_form_for @instrumental, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div id='images'>
  	<%= f.simple_fields_for :images do |image| %>
      	<%= render 'image_fields', f: image %>  
    <% end %>
    <div class='links'>
       <%= link_to_add_association 'add photo', f, :images %>
    </div>
  </div>
     
    <%= f.submit 'Save' %>
  
<% end %>
